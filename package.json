{
  "name": "paalan-react-shadcn-ui",
  "private": true,
  "version": "1.0.0",
  "description": "Reusable react ui components with build on top of Tailwind CSS and Shadcn UI",
  "type": "module",
  "author": {
    "name": "Paalamugan"
  },
  "scripts": {
    "dev": "npm run storybook",
    "start": "npm run dev",
    "filter-package": "pnpm --workspace-concurrency 1 --filter=./packages/config --filter=./packages/shared --filter=./packages/test-utils --filter=./packages/hooks --filter=./packages/icons --filter=./packages/ui --filter=./packages/providers",
    "build": "pnpm filter-package build",
    "build-fast": "pnpm filter-package build-fast",
    "tsup": "pnpm filter-package tsup",
    "lint": "eslint ./packages --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --cache",
    "lint:fix": "pnpm lint --fix",
    "typedocs": "pnpm react:components typedocs",
    "type-check": "pnpm --filter=./packages/* type-check",
    "react:components": "pnpm --filter=@paalan/react-ui",
    "format": "prettier --write packages --cache",
    "format:check": "prettier --check packages --cache",
    "test": "pnpm --filter=./packages/* test",
    "test:coverage": "pnpm test --coverage",
    "test:watch": "pnpm test --watch",
    "storybook": "storybook dev -p 6006",
    "storybook:docs": "storybook dev -p 6007 --docs",
    "storybook:build": "cross-env NODE_OPTIONS=\"--max-old-space-size=8096\" storybook build",
    "storybook:build:docs": "npm run storybook:build -- --docs",
    "storybook:test": "test-storybook",
    "storybook:test:watch": "npm run storybook:test -- --watch",
    "storybook:clean": "rm -rf node_modules/.cache/storybook",
    "generate:types": "tsc --emitDeclarationOnly --declaration --declarationDir dist",
    "prepare": "npx husky install",
    "clean": "pnpm -r --parallel exec rimraf dist",
    "validate:package-exports": "node ./scripts/validate-package-exports.js",
    "preview": "npm run storybook:build && serve storybook-static",
    "preview:docs": "npm run storybook:build:docs && serve storybook-static",
    "commit": "cz",
    "validate": "npm run build && npm run storybook:build && npm run test",
    "print": "sls print",
    "deploy": "npm run storybook:build && sls deploy",
    "deploy:local": "cross-env AWS_SDK_LOAD_CONFIG=1 npm run deploy",
    "next:enter": "changeset pre enter next",
    "next:exit": "changeset pre exit next",
    "version": "changeset version",
    "release": "changeset publish",
    "version:dev": "changeset version --snapshot dev",
    "release:dev": "changeset publish --tag dev",
    "release:local": "npx env-cmd -f .env -x \"pnpm release\"",
    "publish": "npx env-cmd -f .env -x \"pnpm publish -r //registry.npmjs.org/:_authToken=$NPM_TOKEN\"",
    "slack": "tsx scripts/slack.ts"
  },
