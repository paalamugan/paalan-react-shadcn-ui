{
  "name": "@paalan/react-hooks",
  "version": "1.0.3",
  "description": "React UI hooks for Paalan UI",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": {
    "name": "Paalamugan Samayamuthu",
    "email": "paalamugan.samayamuthu@paalan.com"
  },
  "scripts": {
    "build": "npm run clean && npm run type-check && npm run lint && npm run tsup",
    "lint": "eslint ./src --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --cache",
    "lint:fix": "npm run lint -- --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,md,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,mdx}\" --cache",
    "tsup": "tsup",
    "tsup:watch": "tsup --watch",
    "prepublish": "npm run build",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "react-router-dom": "^6.17.0",
    "@zag-js/element-size": "^0.24.0",
    "zen-observable-ts": "^1.1.0"
  },
  "peerDependencies": {
    "react": ">=16.18.x",
    "react-dom": ">=16.18.x"
  },
  "engines": {
    "node": ">=16.x.x"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paalamugan/paalan-react-ui.git"
  },
  "bugs": {
    "url": "https://github.com/paalamugan/paalan-react-ui/issues"
  },
  "homepage": "https://github.com/paalamugan/paalan-react-ui#readme",
  "license": "ISC",
  "files": [
    "dist",
    "tsconfig.json"
  ]
}
