{
  "name": "@paalan/react-ui",
  "version": "1.0.6",
  "description": "React UI components for Paalan UI",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Paalamugan"
  },
  "scripts": {
    "build": "npm run type-check && npm run lint && npm run tsup",
    "build-fast": "npm run tsup",
    "lint": "eslint ./src --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --cache",
    "lint:fix": "npm run lint -- --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,md,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,mdx}\" --cache",
    "tsup": "tsup",
    "tsup:watch": "tsup --watch",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.4",
    "@radix-ui/react-aspect-ratio": "^1.0.3",
    "@radix-ui/react-avatar": "^1.0.3",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-collapsible": "^1.0.3",
    "@radix-ui/react-context-menu": "^2.1.4",
    "@radix-ui/react-dialog": "^1.0.4",
    "@radix-ui/react-dropdown-menu": "^2.0.5",
    "@radix-ui/react-hover-card": "^1.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-menubar": "^1.0.3",
    "@radix-ui/react-navigation-menu": "^1.1.3",
    "@radix-ui/react-popover": "^1.0.6",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-scroll-area": "^1.0.4",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toggle": "^1.0.3",
    "@radix-ui/react-toggle-group": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.6",
    "@tanstack/react-table": "^8.9.9",
    "class-variance-authority": "^0.7.0",
    "cmdk": "^0.2.0",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "react-day-picker": "^8.8.2",
    "react-error-boundary": "^4.0.13",
    "react-hook-form": "^7.51.5",
    "react-router-dom": "^6.17.0",
    "zod": "^3.23.6"
  },
  "peerDependencies": {
    "react": ">=16.18.x",
    "react-dom": ">=16.18.x"
  },
  "engines": {
    "node": ">=16.x.x"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./base": {
      "import": "./dist/base/index.js",
      "require": "./dist/base/index.cjs",
      "types": "./dist/base/index.d.ts"
    },
    "./components": {
      "import": "./dist/components/index.js",
      "require": "./dist/components/index.cjs",
      "types": "./dist/components/index.d.ts"
    },
    "./tailwind.css": "./dist/tailwind.css",
    "./styles.css": "./dist/index.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paalamugan/paalan-react-shadcn-ui.git"
  },
  "bugs": {
    "url": "https://github.com/paalamugan/paalan-react-shadcn-ui/issues"
  },
  "homepage": "https://github.com/paalamugan/paalan-react-shadcn-ui#readme",
  "license": "ISC",
  "files": [
    "dist",
    "tsconfig.json"
  ]
}
