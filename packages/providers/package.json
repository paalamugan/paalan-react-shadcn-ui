{
  "name": "@paalan/react-providers",
  "version": "1.2.0",
  "description": "React UI providers for Paalan UI",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "author": {
    "name": "Paalamugan"
  },
  "scripts": {
    "build": "npm run type-check && npm run lint && npm run tsup",
    "build-fast": "npm run tsup",
    "lint": "eslint ./src --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --cache",
    "lint:fix": "npm run lint -- --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,md,mdx}\" --cache",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,md,mdx}\" --cache",
    "tsup": "tsup",
    "tsup:watch": "tsup --watch",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@azure/msal-browser": "^3.5.0",
    "@azure/msal-react": "^2.0.7",
    "axios": "^1.6.0"
  },
  "peerDependencies": {
    "react": ">=16.18.x",
    "react-dom": ">=16.18.x",
    "react-router-dom": ">=6.x.x"
  },
  "exports": {
    "./FormatIntlProvider": {
      "import": "./FormatIntlProvider/index.js",
      "require": "./FormatIntlProvider/index.cjs",
      "types": "./FormatIntlProvider/index.d.ts"
    },
    "./MsalAuthProvider": {
      "import": "./MsalAuthProvider/index.js",
      "require": "./MsalAuthProvider/index.cjs",
      "types": "./MsalAuthProvider/index.d.ts"
    },
    "./ThemeProvider": {
      "import": "./ThemeProvider/index.js",
      "require": "./ThemeProvider/index.cjs",
      "types": "./ThemeProvider/index.d.ts"
    },
    "./NextThemeProvider": {
      "import": "./NextThemeProvider/index.js",
      "require": "./NextThemeProvider/index.cjs",
      "types": "./NextThemeProvider/index.d.ts"
    },
    "./ToastProvider": {
      "import": "./ToastProvider/index.js",
      "require": "./ToastProvider/index.cjs",
      "types": "./ToastProvider/index.d.ts"
    }
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paalamugan/paalan-react-shadcn-ui.git"
  },
  "bugs": {
    "url": "https://github.com/paalamugan/paalan-react-shadcn-ui/issues"
  },
  "homepage": "https://github.com/paalamugan/paalan-react-shadcn-ui#readme",
  "license": "ISC",
  "files": [
    "dist",
    "tsconfig.json"
  ]
}
