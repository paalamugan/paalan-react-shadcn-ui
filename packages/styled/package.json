{
  "name": "@paalan/react-styled",
  "version": "1.0.5",
  "description": "React UI styled for Paalan UI",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": {
    "name": "Paalamugan Samayamuthu",
    "email": "paalamugan.samayamuthu@paalan.com"
  },
  "scripts": {
    "build": "npm run type-check && npm run lint && npm run clean && npm run tsup",
    "lint": "eslint ./src --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --cache",
    "lint:fix": "npm run lint -- --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,md,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,mdx}\" --cache",
    "tsup": "tsup",
    "tsup:watch": "tsup --watch",
    "tailwind": "npx tailwindcss -i ./src/css/index.css  -o ./dist/index.css",
    "tailwind:min": "npm run tailwind -- --minify",
    "tailwind:watch": "npm run tailwind -- --watch",
    "prepublish": "npm run build",
    "clean": "rimraf dist",
    "publish:locally": "npx yalc publish"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./css/tailwind.css": "./dist/css/tailwind.css",
    "./css/index.css": "./dist/css/index.css",
    "./styles.css": "./dist/index.css"
  },
  "engines": {
    "node": ">=16.x.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paalamugan/paalan-react-ui.git"
  },
  "bugs": {
    "url": "https://github.com/paalamugan/paalan-react-ui/issues"
  },
  "homepage": "https://github.com/paalamugan/paalan-react-ui#readme",
  "license": "ISC",
  "files": [
    "dist",
    "tsconfig.json",
    "README.md"
  ]
}
