{
  "name": "@paalan/react-config",
  "version": "1.0.2",
  "description": "React UI config for Paalan UI",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": {
    "name": "Paalamugan Samayamuthu",
    "email": "paalamugan.samayamuthu@paalan.com"
  },
  "scripts": {
    "build": "npm run type-check && npm run clean && npm run tsup",
    "lint": "eslint ./src --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --cache",
    "lint:fix": "npm run lint -- --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,md,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,mdx}\" --cache",
    "tsup": "tsup",
    "tsup:watch": "tsup --watch",
    "prepublish": "npm run build",
    "clean": "rimraf dist",
    "publish:locally": "npx yalc publish"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./prettier": {
      "import": "./dist/prettier.config.js",
      "require": "./dist/prettier.config.cjs",
      "types": "./dist/prettier.config.d.ts"
    },
    "./tailwind": {
      "import": "./dist/tailwind.config.js",
      "require": "./dist/tailwind.config.cjs",
      "types": "./dist/tailwind.config.d.ts"
    },
    "./eslint": {
      "import": "./dist/eslint.config.js",
      "require": "./dist/eslint.config.cjs",
      "types": "./dist/eslint.config.d.ts"
    },
    "./eslint-vite": {
      "import": "./dist/eslint-vite.config.js",
      "require": "./dist/eslint-vite.config.cjs",
      "types": "./dist/eslint-vite.config.d.ts"
    }
  },
  "engines": {
    "node": ">=16.x.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paalamugan/paalan-react-ui.git"
  },
  "bugs": {
    "url": "https://github.com/paalamugan/paalan-react-ui/issues"
  },
  "homepage": "https://github.com/paalamugan/paalan-react-ui#readme",
  "license": "ISC",
  "files": [
    "dist",
    "tsconfig.json",
    "README.md"
  ]
}
